# ============================================================================
# Environment Configuration - SPECTRA Diffusion Module
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:CHANGE_ME_PASSWORD@postgres:5432/diffusion
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_PASSWORD
POSTGRES_DB=diffusion

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================================================
# MinIO Configuration
# ============================================================================
MINIO_URL=http://minio:9000
MINIO_ROOT_USER=CHANGE_ME_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_ME_MIN10_PASSWORD
MINIO_BUCKET=diffusion-data

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=CHANGE_ME_SECRET_KEY_MINIMUM_32_CHARACTERS_REQUIRED

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/diffusion.log

# ============================================================================
# Security
# ============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,api.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3012,https://app.yourdomain.com

# ============================================================================
# Module Configuration
# ============================================================================
ENVIRONMENT=production
MODULE_VERSION=1.12.0
GIT_COMMIT=

# ============================================================================
# Performance
# ============================================================================
MAX_CONCURRENT_SIMULATIONS=10
CACHE_TTL_SECONDS=3600
ENABLE_PROFILING=false

# ============================================================================
# Monitoring
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# Session Management
# ============================================================================
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=5
